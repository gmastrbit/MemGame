                android:layout_margin="5dp"
                android:background="#fff"
                android:onClick="error3_1_5" />

            <Button
                android:id="@+id/button70"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:background="#fff"
                android:onClick="error3_1_6" />

            <Button
                android:id="@+id/button71"
                android:layout_width="90dp"
