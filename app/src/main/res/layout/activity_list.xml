<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListActivity"
    android:background="@drawable/gradient">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="25dp"
                        android:paddingBottom="25dp"
                        android:text="Розділи тренування"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="35sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <Button
                            android:id="@+id/button1"
                            android:layout_width="100dp"
                            android:layout_height="114dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/volume1"
                            android:onClick="go_volume_1"
                            android:text="Мозаїка пам'яті"
                            android:textAllCaps="false"
                            android:textSize="16sp" />

                        <Button
                            android:id="@+id/button2"
                            android:layout_width="100dp"
                            android:layout_height="114dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/volume2"
                            android:onClick="go_volume_2"
                            android:text="Вихор іконок"
                            android:textAllCaps="false"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <Button
                            android:id="@+id/button3"
                            android:layout_width="100dp"
                            android:layout_height="114dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/volume3"
                            android:onClick="go_volume_3"
                            android:text="Йди за ними"
                            android:textAllCaps="false"
                            android:textSize="16sp" />

                        <Button
                            android:id="@+id/button4"
                            android:layout_width="100dp"
                            android:layout_height="114dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/volume4"
                            android:onClick="go_volume_4"
                            android:text="Порядок кольорів"
                            android:textAllCaps="false"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <Button
                            android:id="@+id/button5"
                            android:layout_width="100dp"
                            android:layout_height="114dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/volume5"
                            android:onClick="go_volume_5"
                            android:text="Почерговість цифр"
                            android:textAllCaps="false"
                            android:textSize="16sp" />

                        <Button
                            android:id="@+id/button6"
                            android:layout_width="100dp"
                            android:layout_height="114dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/volume6"
                            android:onClick="go_volume_6"
                            android:text="Впорядкуй слова"
                            android:textAllCaps="false"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/button92"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:height="55dp"
                        android:background="@drawable/main_buttons"
                        android:onClick="showRating"
                        android:text="Рейтинг" />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>